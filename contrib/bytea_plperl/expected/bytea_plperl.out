CREATE FUNCTION perl_inverse_bytes(bytea) RETURNS bytea
TRANSFORM FOR TYPE bytea
AS $$
	return join '', reverse split('', $_[0]);
$$ LANGUAGE plperl;
SELECT 'ξενία'::bytea, perl_inverse_bytes('ξενία'::bytea);
