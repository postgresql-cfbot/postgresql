CREATE FUNCTION on_cmtest_rewrite()
RETURNS event_trigger AS $$
BEGIN
	RAISE NOTICE 'cmtest rewrite';
END;
$$  LANGUAGE plpgsql;
CREATE EVENT TRIGGER notice_on_cmtest_rewrite ON table_rewrite
	EXECUTE PROCEDURE on_cmtest_rewrite();
