CREATE FUNCTION cat_bytea(bytea) RETURNS bytea LANGUAGE plperl
 TRANSFORM FOR TYPE bytea
 AS $$
    return $_[0];
 $$;
SELECT data = cat_bytea(data)
    FROM (
        SELECT decode(repeat(unnest(ARRAY[ 'a','abc', 'abcd', 'abcdefgh\000ijkl12' , '爱' ]), 10000), 'escape') data
    ) line;
