  FROM mvtest_replace m
    CROSS JOIN pg_class c
    LEFT JOIN pg_tablespace s ON s.oid = c.reltablespace
    LEFT JOIN pg_am a ON a.oid = c.relam
  WHERE c.relname = 'mvtest_replace';
