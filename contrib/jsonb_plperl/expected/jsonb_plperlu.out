-- test blessed scalar -> jsonb
CREATE FUNCTION testBlessedToJsonb() RETURNS jsonb
LANGUAGE plperlu
TRANSFORM FOR TYPE jsonb
AS $$
my $class = shift;
my $tmp = { a=>"a", 1=>"1" };
bless $tmp, $class;
return $tmp;
$$;
SELECT testBlessedToJsonb();
  testblessedtojsonb  
----------------------
